{
  "manifest_version": 3,
  "name": "YouTube Text Copier",
  "description": "Select and copy text or code directly from YouTube videos",
  "version": "1.0",

  "permissions": ["activeTab", "tabs"],

  "host_permissions": [
    "https://www.youtube.com/*",
    "https://api.ocr.space/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
